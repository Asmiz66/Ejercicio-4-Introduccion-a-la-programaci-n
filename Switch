public class Main {
    public static void main(String[] args) {
        var estacion = "Veroño";

        switch (estacion){
            case "Verano":
                System.out.println("Hace calor");
                break;
            case "Otoño":
                System.out.println("La mejor");
                break;
            case "Invierno":
                System.out.println("Hace frio");
                break;
            case "Primavera":
                System.out.println("Me pican los ojos");
                break;
            default:
                System.out.println("Lo has escrito bien?");


        }
    }
}
